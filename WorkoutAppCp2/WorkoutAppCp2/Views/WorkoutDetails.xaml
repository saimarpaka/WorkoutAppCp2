<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WorkoutAppCp2.Views"
             x:Class="WorkoutAppCp2.Views.WorkoutDetails">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="12">
            <local:WorkoutsView/>
            <Button Text="Update" BorderRadius="0" Margin="0,30,0,0" FontAttributes="Bold" TextColor="White" BackgroundColor="#5989B5" Command="{Binding UpdateWorkoutCommand}" />
            <Button Text="Delete" BorderRadius="0" Margin="0,30,0,0" FontAttributes="Bold" TextColor="White" BackgroundColor="#5989B5" Command="{Binding DeleteWorkoutCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>