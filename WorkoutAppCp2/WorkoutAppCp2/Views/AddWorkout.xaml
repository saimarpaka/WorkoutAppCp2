<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkoutAppCp2.Views.AddWorkout"
             xmlns:local="clr-namespace:WorkoutAppCp2.Views">
    <ContentPage.Content>
        <StackLayout>
            <local:WorkoutsView></local:WorkoutsView>

            <StackLayout>
                <StackLayout Padding="6,0,6,0">
                    <Button x:Name="SubmitButton" Command="{Binding AddWorkoutCommand}"  BorderRadius="0" Text="Save Workout" FontAttributes="Bold" TextColor="White" BackgroundColor="#5989B5" />
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>